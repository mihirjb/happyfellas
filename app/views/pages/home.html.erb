        <h1 class="modal-title hero" id="somethingLabel">Send us an email</h1>
      </div>
      <div class="modal-body">
		<%= form_for(@potentialclient, :url => '/potentialclients', :method => 'POST') do |f| %>
		 	<div class="form-group">
			<div class="input-group-lg">
		 <%= f.email_field :email, :class=> "form-control required", :placeholder=>"My Email address is", :required => true %>
		 <%= f.text_field :fullname, :class=> "form-control required", :placeholder=>"My Full Name is ", :required => true %><br/><br/>
		<%= f.label :worktype, "I want you to make " %>
			<%= f.select :worktype , [ ['Website','Website'], ['Software','Software'], ['Mobile App','Mobile App'], ['SEO campaign','SEO campaign'], ['Social Media Campaign','Social Media Campaign'], ['All of them','All of them']],  :autofocus => true, :class=> "form-control"%><br/><br/>
			<%= f.label :budget, "And my budget is" %>
			
			<%= f.select :budget , [['Under 1000', 'Under 1000'], ['1000-2500','1000-2500'], ['2500-5000','2500-5000'], ['5000-10000','5000-10000'], ['Above 10000','Above 10000']],  :autofocus => true, :class=> "form-control"%>
		
		</div>
		</div>


      </div>
      <div class="modal-footer">
        	<div class="form-group"> <%= f.submit "Send", :disable_with => 'Sending...', :class =>"btn btn-primary btn-lg" %></div>
		<% end %>
      </div>
    </div>
  </div>
</div>

</div>
